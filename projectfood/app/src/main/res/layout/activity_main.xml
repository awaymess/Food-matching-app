<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fod"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="160dp"
        android:layout_marginBottom="40dp"
        android:background="#000000"
        android:text="HOME"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:textStyle="bold"
        android:typeface="sans"
        app:layout_constraintBottom_toTopOf="@+id/btn_st"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_st"
        android:layout_width="172dp"
        android:layout_height="60dp"
        android:layout_marginStart="116dp"
        android:layout_marginBottom="20dp"
        android:background="#99FFEB3B"
        android:text="START"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_con"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_con"
        android:layout_width="165dp"
        android:layout_height="60dp"
        android:layout_marginStart="120dp"
        android:layout_marginBottom="12dp"
        android:backgroundTint="#992E2633"
        android:text="CONTACT"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/btn_ab"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_ab"
        android:layout_width="163dp"
        android:layout_height="60dp"
        android:layout_marginStart="120dp"
        android:layout_marginBottom="248dp"
        android:backgroundTint="#99E29B2F"
        android:text="ABOUT"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>